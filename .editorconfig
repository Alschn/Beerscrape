# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Indentation override for all JS, HTML, CSS
[*.{js, jsx, ts, tsx, html, css, scss, json, yml, yaml}]
indent_style = space
indent_size = 2
tab_width = 2
